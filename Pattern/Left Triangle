<h1 align="center" >Count Digit in a Number</h1>
<form method="POST">
<label>Enter Range of Number </label>
<input type="number" name="range" size="10" >
<input type="submit" name="submit" >
</form>
<?php

	$range=$_POST['range'];
	if(isset($range))
	{
	$i=0;
	for($i=0;$i<=$range;$i++)
	{
		for($j=0;$j<=$i;$j++)
		{
			echo "P";
		}
		echo "<br>";
	}
	
	}

?>
