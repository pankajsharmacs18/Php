<body>
<h1 align="center" >Sum of 1 to N </h1>
<form method="POST">
<label>Enter Range of Number </label>
<input type="number" name="range" size="10" >
<input type="submit" name="submit" >
</form>
<?php

	$range=$_POST['range'];
	if(isset($range))
	{
	$i=1;
	$s=0;
	while($i<=$range)
	{
	$s=$s+$i;	
	$i++;
	}
	echo "Sum if 1 ro $range is : $s";
	}

?>
